    </build>

    <profiles>
        <profile>
            <id>dev</id>
            <properties>
                <jpackage.type>APP_IMAGE</jpackage.type>
                <app.version.pkg>4.0.0</app.version.pkg>
            </properties>
        </profile>

        <profile>
            <id>prod</id>
            <properties>
                <jpackage.type>MSI</jpackage.type>
                <app.version.pkg>4.0.0</app.version.pkg>
            </properties>
        </profile>
    </profiles>

</project>